<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/favorite_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/alertTypeLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            android:textColor="#0B1A6A"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/alertTimeLbl"
            app:layout_constraintTop_toBottomOf="@+id/alertTimeLbl"
            tools:text="Alarm" />

    <TextView
        android:id="@+id/alertTimeLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="#0B1A6A"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10:00" />

        <TextView
            android:id="@+id/alertDayLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            android:textColor="#0B1A6A"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/alertTypeLbl"
            app:layout_constraintEnd_toEndOf="@+id/alertEventLbl"
            app:layout_constraintStart_toStartOf="@+id/alertEventLbl"
            app:layout_constraintTop_toBottomOf="@+id/alertEventLbl"
            app:layout_constraintVertical_bias="0.842"
            tools:text="Sunday" />

    <Switch
        android:id="@+id/alertSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alertTimeLbl"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="25dp"
        android:layout_height="25dp"

        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/places_ic_clear"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alertEventLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="#0B1A6A"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/alertTimeLbl"
            app:layout_constraintEnd_toStartOf="@+id/deleteButton"
            app:layout_constraintStart_toEndOf="@+id/alertTimeLbl"
            app:layout_constraintTop_toTopOf="@+id/alertTimeLbl"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Wind" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>